@model InfoViewModel

@{
    ViewBag.Title = "Details";
    Layout = "_Layout";
}
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Photo" class="img-fluid" alt="Responsive image">
        </div>
        <div class="col-md-8">
            <h3>@Model.ProtocolName</h3>
            <p>@Model.Info</p>
            @if (!string.IsNullOrEmpty(Model.Port))
            {
                <p>Port number: @Model.Port</p>
            }

        </div>
    </div>
</div>

<a href="@Url.Action("Index", "Home")">Back to list</a>